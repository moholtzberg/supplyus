<% if @category.errors.any? %>
  $(".modal-content").html("<%= j render :template => 'categories/edit.html', :format => 'html' %>")
<% else %>
  $('#myModal').modal("hide")
  $('body').removeClass('modal-open')
  $('.modal-backdrop').remove()
  $("#categories-table").DataTable().draw('full-hold');
  <% if @category.parent_id.nil? %>
    $('#category_<%= @category.id %>').remove();
  <% end %>
<% end %>