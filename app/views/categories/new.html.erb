<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="myModalLabel">New Category</h4>
</div>

<div class="modal-body" id="modal-body">
	
	<% if @category.errors.any? %>
		<div id="flash_messages" class="alert alert-danger" role="alert">
			<strong><%= @category.errors.full_messages.join(', ') %></strong>
		</div>
	<% end %>
	
	
	<%= form_for @category, :remote => true, :html => {:class => "form-horizontal"} do |f| %>
		<%= render :partial => "categories/form", :locals => {:f => f}%>
	<% end %>
	
</div>

<div class="modal-footer">
	<%= button_tag(:name => :commit, :type => :submit, :class => "btn btn-primary", :form => "new_category") do %>
		Create Category 
	<% end %>
</div>
