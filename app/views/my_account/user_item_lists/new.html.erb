<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title" id="myModalLabel">Share List "<%= @item_list.name %>"</h4>
</div>

<div class="modal-body" id="modal-body">
  
  <% if flash[:error] %>
  <div id="flash_messages" class="alert alert-danger" role="alert">
    <strong><%= flash[:error] %></strong>
  </div>
  <% end %>
  
  
  <%= form_for [:my_account, @user_item_list], :remote => true, :html => {:class => "form-horizontal"} do |f| %>
    <%= render partial: 'form', :locals => {:f => f}%>
  <% end %>
  
</div>

<div class="modal-footer">
  <%= button_tag(:name => :commit, :type => :submit, :class => "btn btn-primary", :form => "new_user_item_list") do %>
  Share List
  <% end %>
</div>
