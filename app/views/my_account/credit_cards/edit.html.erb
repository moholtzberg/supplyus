<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="myModalLabel">Edit Credit Card</h4>
</div>

<div class="modal-body" id="modal-body">
	
	<% if flash[:error] %>
	<div id="flash_messages" class="aelrt alert-danger" role="alert">
		<strong><%= flash[:error] %></strong>
	</div>
	<% end %>
	
	
	<%= form_for [:my_account, @credit_card], :remote => true, :html => {:class => "form-horizontal"} do |f| %>
		<%= render :partial => "my_account/credit_cards/form", :locals => {:f => f}%>
	<% end %>
	
</div>

<div class="modal-footer">
	<%= button_tag(:name => :commit, :type => :submit, :class => "btn btn-primary", :form => "edit_credit_card_#{@credit_card.id}") do %>
	Update Credit Card
	<% end %>
</div>
