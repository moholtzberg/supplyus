<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="myModalLabel">Edit Payment</h4>
</div>

<div class="modal-body" id="modal-body">
	
	<% if flash[:error] %>
	<div id="flash_messages" class="aelrt alert-danger" role="alert">
		<strong><%= flash[:error] %></strong>
	</div>
	<% end %>
	
	
	<%= form_for @payment, as: :payment, url: payment_path(@payment), :remote => true, :html => {:class => "form-horizontal", id: "edit_payment_#{@payment.id}"} do |f| %>
		<%= render :partial => "payments/form", :locals => {:f => f}%>
	<% end %>
</div>

<div class="modal-footer">
	<%= button_tag(:name => :commit, :type => :submit, :class => "btn btn-primary", :form => "edit_payment_#{@payment.id}") do %>
	Update Payment 
	<% end %>
</div>
