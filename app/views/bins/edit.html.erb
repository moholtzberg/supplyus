<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="myModalLabel">Edit Bin</h4>
</div>

<div class="modal-body" id="modal-body">
	
	<% if @bin.errors.any? %>
		<div id="flash_messages" class="alert alert-danger" role="alert">
			<strong><%= @bin.errors.full_messages.join(', ') %></strong>
		</div>
	<% end %>
	
	
	<%= form_for @bin, url: bin_path(@bin, search_params), :remote => true, :html => {:class => "form-horizontal"} do |f| %>
		<%= render :partial => "bins/form", :locals => {:f => f}%>
	<% end %>
	
</div>

<div class="modal-footer">
	<%= button_tag(:name => :commit, :type => :submit, :class => "btn btn-primary", :form => "edit_bin_#{@bin.id}") do %>
		Update Bin
	<% end %>
</div>
