<fieldset>	
	
	<div id="name" class="col-md-6">
		<%= f.label :name, :class => "control-label" %>
		<%= f.text_field :name, :class => "form-control" %>
	</div>
	
	<div id="user_id" class="col-md-6">
		<%= f.label :user_id, :class => "control-label" %>
		<%= f.select :user_id, [[f.object.user&.email, f.object.user_id]], {include_blank: true}, class: "form-control", style: "width: 100%" %>
	</div>
	
	<script>
		$("#item_list_user_id").select2({
		  ajax: {
		    url: "<%= users_path %>",
		    dataType: 'json',
		    delay: 250,
		    data: function (params) {
		      return {
		        term: params.term
		      };
		    },
		    processResults: function (data, params) {
		      return {
		        results: data
		      };
		    },
		    cache: true
		  },
		  minimumInputLength: 1,
		  placeholder: 'Search user',
		  allowClear: true,
		  theme: "bootstrap"
		});
	</script>	
	
</fieldset>