<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="myModalLabel">Edit Item List</h4>
</div>

<div class="modal-body" id="modal-body">
	
	<% if @item_list.errors.any? %>
		<div id="flash_messages" class="alert alert-danger" role="alert">
			<strong><%= @item_list.errors.full_messages.join(', ') %></strong>
		</div>
	<% end %>
	
	<%= form_for @item_list, as: :item_list, url: item_list_path(@item_list, search_params), :remote => true, :html => {:class => "form-horizontal", id: "edit_item_list_#{@item_list.id}"} do |f| %>
		<%= render :partial => "item_lists/form", :locals => {:f => f}%>
	<% end %>
	
</div>

<div class="modal-footer">
	<%= button_tag(:name => :commit, :type => :submit, :class => "btn btn-primary", :form => "edit_item_list_#{@item_list.id}") do %>
		Update Item List
	<% end %>
</div>
