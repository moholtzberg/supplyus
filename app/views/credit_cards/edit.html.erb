<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="myModalLabel">Edit Credit Card</h4>
</div>

<div class="modal-body" id="modal-body">
	
	<% if @credit_card.errors.any? %>
		<div id="flash_messages" class="alert alert-danger" role="alert">
			<strong><%= @credit_card.errors.full_messages.join(', ') %></strong>
		</div>
	<% end %>
	
	
	<%= form_for @credit_card, url: credit_card_path(@credit_card, search_params), :remote => true, :html => {:class => "form-horizontal"} do |f| %>
		<%= render :partial => "credit_cards/form", :locals => {:f => f}%>
	<% end %>
	
</div>

<div class="modal-footer">
	<%= button_tag(:name => :commit, :type => :submit, :class => "btn btn-primary", :form => "edit_credit_card_#{@credit_card.id}") do %>
		Update Credit Card
	<% end %>
</div>
