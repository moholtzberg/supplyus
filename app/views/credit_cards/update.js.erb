<% if @credit_card.errors.any? %>
  $(".modal-content").html("<%= j render :template => 'credit_cards/edit.html', :format => 'html' %>")
<% else %>
  $('#myModal').modal("hide")
  $('body').removeClass('modal-open')
  $('.modal-backdrop').remove()
  $("#credit_cards").replaceWith("<%= j render :template => 'credit_cards/index.html', :format => 'html', :locals => {:credit_cards => @credit_cards} %>")
<% end %>