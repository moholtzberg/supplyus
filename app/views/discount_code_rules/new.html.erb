<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="myModalLabel">New Discount Code Rule</h4>
</div>

<div class="modal-body" id="modal-body">
	
	<% if @discount_code_rule.errors.any? %>
		<div id="flash_messages" class="alert alert-danger" role="alert">
			<strong><%= @discount_code_rule.errors.full_messages.join(', ') %></strong>
		</div>
	<% end %>
	
	
	<%= render :partial => "discount_code_rules/form", :locals => {:rule => @discount_code_rule}%>

	
</div>

<div class="modal-footer">
	<%= button_tag(:name => :commit, :type => :submit, :class => "btn btn-primary", :form => "new_discount_code_rule") do %>
		Create Rule
	<% end %>
</div>
