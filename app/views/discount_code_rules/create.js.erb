<% if @discount_code_rule.errors.any? %>
  $(".modal-content").html("<%= j render :template => 'discount_code_rules/new.html', :format => 'html' %>")
<% else %>
  $('#myModal').modal("hide")
  $('body').removeClass('modal-open')
  $('.modal-backdrop').remove()
  $("#discount_code_rules").html("<%= j render :partial => 'discount_codes/discount_code_rules', :format => 'html', :locals => {:discount_code => @discount_code} %>")
<% end %>