<div id=item_"<%= i.id %>" class="media item_listing">
	
	<div class="col-md-9 col-xs-12">
		<div class="media-left">
			<a href="#">
				<%= image_tag "https://s3.amazonaws.com/247officesuppy/400/400/#{i.default_image_path}", :class => "media-object", :height => "100", :width => "100" %>
			</a>
		</div>
		<div class="media-body">
			<% if params["keywords"] %>
				<% name = i.name.gsub(params["keywords"], "<span class='hlt'>#{params["keywords"]}</span>")  %>
				<% number = i.number.gsub(params["keywords"], "<span class='hlt'>#{params["keywords"]}</span>") %>
				<%# description = i.description.gsub(params["keywords"], "<span class='hlt'>#{params["keywords"]}</span>")if params["keywords"] and i.description %>
			<% else %>
				<% name = i.name  %>
				<% number = i.number %>
				<%# description = i.description %>
			<% end %>
			<h4 class="media-heading"><strong><% if i.slug.blank? or i.default_category.slug.blank? %><%= "#{i.number}" %><% else %><%= link_to "#{number}".html_safe, "#{i.default_category.slug}/#{i.slug}".html_safe %> <% end %></strong> - <%= "#{name}".html_safe %></h4>
			
			<p class="hidden-xs">
				<%# description.html_safe unless description.nil? %>
				<% i.features.first(3).each do |feature| %>
				<li><%= feature.value %></li>
				<% end %>
			</p>
			<p>
				<% unless i.brand.nil? %><span class="label label-warning"><%= i.brand.name %></span><% end %>
				<%# unless i.category.nil? %><span class="label label-info"><%# i.category.name %></span><%# end %>
				<% i.item_categories.first(25).each do |cat| %>&nbsp;<span class="label label-info"><%= cat.category.name %></span><% end %>
				<%# i.item_categories.inspect %>
			</p>
		</div>
	</div>
	
	<div class="col-md-3 col-xs-12">
		<div class="pull-right">
			<%= form_for @cart, url: add_to_cart_path, :class => "form-inline", :remote => true do |f| %>
				<div class="form-group">
					<% if i.actual_price(current_user.try(:account_id)) < i.default_price %>
						<h5 class="text-center"><span class="hidden-xs">List Price:</span> <span style="text-decoration:line-through;"><%= number_to_currency(i.default_price) %></span><h5>
						<h4 class="text-center"><span class="hidden-xs">Your Price:</span> <%= number_to_currency(i.actual_price(current_user.try(:account_id))) %><h4>
					<% else %>
						<h4 class="text-center"><span class="hidden-xs">Your Price:</span> <%= number_to_currency(i.default_price) %><h4>
					<% end %>
					<% if i.prices.actual.select{|p| p._type == 'Bulk'}.any? %>
						<div class="well well-sm">
							<p class="border-bottom">Bulk prices:</p>
							<% i.prices.actual.select{|p| p._type == 'Bulk'}.sort_by(&:min_qty).each do |price| %>
								<p>
									<%= "#{price.min_qty}-#{price.max_qty} pcs.: #{number_to_currency(price.price)}" %>
								</p>
							<% end %>
						</div>
					<% end %>
					<%= f.hidden_field :item_id, :value => i.id %>
					<div class="input-group">
						<%= f.number_field :quantity, :value => 1, :class => "form-control input-sm input-block" %>
					</div>
				</div>
				<%= f.submit "Add To Cart", :class => "btn btn-primary btn-sm btn-block margin-bottom" %>
			<% end %>
			<% if i.prices.actual.select{|p| p._type == 'Recurring'}.any? %>
				<%= link_to "Subscribe (#{number_to_currency(i.prices.actual.select{|p| p._type == 'Recurring'}[0].price)})", new_my_account_subscription_path(subscription: {item_id: i.id, account_id: current_user&.account_id, state: 'new'}), remote: true, class: "btn btn-primary btn-sm btn-block" %>
			<% end %>
			<%= render partial: 'shop/list_select', locals: {item: i} %>
		</div>
	</div>
	
</div>

<hr/>