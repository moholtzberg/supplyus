<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="myModalLabel">New Purchase Order</h4>
</div>

<div class="modal-body" id="modal-body">
	
	<% if @purchase_order.errors.any? %>
		<div id="flash_messages" class="alert alert-danger" role="alert">
			<strong><%= @purchase_order.errors.full_messages.join(', ') %></strong>
		</div>
	<% end %>	
	
	<%= form_for @purchase_order, :remote => true, :html => {:class => "form-horizontal"} do |f| %>
		<%= render :partial => "purchase_orders/form", :locals => {:f => f}%>
	<% end %>
	
</div>

<div class="modal-footer">
	<%= button_tag(:name => :commit, :type => :submit, :class => "btn btn-primary", :form => "new_purchase_order") do %>
		Create Purchase Order 
	<% end %>
</div>
