<div class="dropdown">
  <button class="btn btn-default btn-xs dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu pull-right" aria-labelledby="dropdownMenu1">
    <li><%= link_to("View", purchase_order_path(item.id))  %></li>
    <% unless item.locked %>
    <li><%= link_to("Edit", edit_purchase_order_path(item.id)) %></li>
    <li><%= link_to("Lock", lock_purchase_order_path(item.id), :remote => true, :method => "put") %></li>
    <% else %>
      <% unless item.received %><li><%= link_to("Receive", new_purchase_order_purchase_order_receipt_path(item.id))  %></li><% end %>
    <% end %>
  </ul>
</div>
