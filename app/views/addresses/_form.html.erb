<fieldset>	

	<div id="name" class="col-md-6">
		<%= f.label :name, class: "control-label" %>
		<%= f.text_field :name, class: "form-control" %>
	</div>
			
	<div id="address_1" class="col-md-6">
		<%= f.label :address_1, class: "control-label" %>
		<%= f.text_field :address_1, class: "form-control" %>
	</div>

	<div id="address_2" class="col-md-6">
		<%= f.label :address_2, class: "control-label" %>
		<%= f.text_field :address_2, class: "form-control" %>
	</div>

	<div id="city" class="col-md-6">
		<%= f.label :city, class: "control-label" %>
		<%= f.text_field :city, class: "form-control" %>
	</div>

	<div id="state" class="col-md-6">
		<%= f.label :state, class: "control-label" %>
		<%= f.text_field :state, class: "form-control" %>
	</div>

	<div id="zip" class="col-md-6">
		<%= f.label :zip, class: "control-label" %>
		<%= f.text_field :zip, class: "form-control" %>
	</div>

	<div id="phone" class="col-md-6">
		<%= f.label :phone, class: "control-label" %>
		<%= f.text_field :phone, class: "form-control" %>
	</div>

	<div id="fax" class="col-md-6">
		<%= f.label :fax, class: "control-label" %>
		<%= f.text_field :fax, class: "form-control" %>
	</div>

	<div id="main" class="col-md-6">
		<%= f.label :main, class: "control-label" %>
		<%= f.check_box :main, class: "form-control" %>
	</div>
	
	<% if params[:account_id] %>
		<%= f.hidden_field :account_id %>
	<% else %>
		<div id="account" class="col-md-6">
			<%= f.label :account, :class => "control-label" %>
			<%= f.text_field :account_name, :class => "form-control", data: {autocomplete_source: accounts_path} %>
		</div>
		
		<script>
			jQuery(function() {
				return $('#address_account_name').autocomplete({
					source: $('#address_account_name').data('autocomplete-source')
				})
			});
		</script>	
	<% end %>

</fieldset>