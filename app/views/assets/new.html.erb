<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="myModalLabel">New Asset</h4>
</div>

<div class="modal-body" id="modal-body">
	
	<% if @asset.errors.any? %>
		<div id="flash_messages" class="alert alert-danger" role="alert">
			<strong><%= @asset.errors.full_messages.join(', ') %></strong>
		</div>
	<% end %>
	
	<%= form_for @asset, as: :asset, url: assets_path(search_params), method: :post, :remote => true, :html => {:class => "form-horizontal"} do |f| %>
		<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
		<%= render :partial => "assets/form", :locals => {:f => f}%>
	<% end %>
	
</div>

<div class="modal-footer">
	<%= button_tag(:name => :commit, :type => :submit, :class => "btn btn-primary", :form => "new_asset") do %>
		Create Asset
	<% end %>
</div>
