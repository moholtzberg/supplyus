	<%= form_for ItemReference.new, id: "new_item_reference_form", class: "form-control", method: :post, remote: true do |f| %>
		<!-- <div class="row"> -->
			<div class="form-group col-md-4">
				<%= f.label :replacement_item, class: "control-label" %>
				<%= f.text_field :replacement_item_number, class: "form-control" %>
			</div>
			<div class="form-group col-md-4">
				<%= f.label :repacement_uom, class: "control-label" %>
				<%= f.text_field :repacement_uom, class: "form-control" %>
			</div>
			<div class="form-group col-md-4">
				<%= f.label :replacement_uom_qty, class: "control-label" %>
				<%= f.text_field :replacement_uom_qty, class: "form-control" %>
			</div>
		<!-- </div> -->
		
		<!-- <div class="row"> -->
			<div class="form-group col-md-4">
				<%= f.label :original_item, class: "control-label" %>
				<%= f.text_field :original_item_number, value: @item.number, class: "form-control" %>
			</div>
			
			<div class="form-group col-md-4">
				<%= f.label :original_uom, class: "control-label" %>
				<%= f.text_field :original_uom, value: "Each", class: "form-control" %>
			</div>
		
			<div class="form-group col-md-4">
				<%= f.label :original_uom_qty, class: "control-label" %>
				<%= f.text_field :original_uom_qty, value: 1, class: "form-control" %>
			</div>
		<!-- </div> -->
		

		<div class="form-group col-md-3">
			<%= f.label :comments, class: "control-label" %>
			<%= f.text_field :comments, class: "form-control" %>
		</div>
		<div class="form-group col-md-3">
			<%= f.label :match_type, class: "control-label" %>
			<%= f.text_field :match_type, class: "form-control" %>
		</div>
		<div class="form-group col-md-3">
			<%= f.label :xref_type, class: "control-label" %>
			<%= f.text_field :xref_type, class: "form-control" %>
		</div>
		<div class="form-group col-md-3">
			<%= f.label " ", class: "control-label" %>
			<%= f.submit class: "btn btn-primary btn-block" %>
		</div>
		
	<% end %>