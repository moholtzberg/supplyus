<% if @account.errors.any? %>
  $(".modal-content").html("<%= j render :template => 'accounts/new.html', :format => 'html' %>")
<% else %>
	$('#myModal').modal("hide")
	$('body').removeClass('modal-open')
	$('.modal-backdrop').remove()
	$("#accounts").replaceWith("<%= j render :template => 'accounts/index.html', :format => 'html' %>")
<% end %>