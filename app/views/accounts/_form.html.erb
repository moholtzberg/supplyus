<fieldset>	
	
	<div id="name" class="col-md-12">
		<%= f.label :name, :class => "control-label" %>
		<%= f.text_field :name, :class => "form-control" %>
	</div>
	
	<div class="col-md-12 address">

		<%= f.fields_for :main_address, @account.main_address do |b| %>

			<%= b.hidden_field :id %>
			
			<div id="address" class="col-md-12">
				<%= b.label :address_name, :class => "control-label" %>
				<%= b.text_field :name, :class => "form-control" %>
			</div>			
	
			<div id="address" class="col-md-12">
				<%= b.label :address, :class => "control-label" %>
				<%= b.text_field :address_1, :class => "form-control" %>
			</div>
		
			<div id="address_2" class="col-md-12">
				<%= b.label :address_2, :class => "control-label" %>
				<%= b.text_field :address_2, :class => "form-control" %>
			</div>
		
			<div id="city" class="col-sm-12">
				<%= b.label :city, :class => "control-label" %>
				<%= b.text_field :city, :class => "form-control" %>
			</div>
		
			<div id="state" class="col-sm-6 col-xs-6">
				<%= b.label :state, :class => "control-label" %>
				<%= b.text_field :state, :class => "form-control" %>
			</div>
		
			<div id="zip" class="col-sm-6 col-xs-6">
				<%= b.label :zip, :class => "control-label" %>
				<%= b.text_field :zip, :class => "form-control" %>
			</div>
		
			<div id="phone" class="col-xs-6">
				<%= b.label :phone, :class => "control-label" %>
				<%= b.text_field :phone, :class => "form-control" %>
			</div>
		
			<div id="fax" class="col-xs-6">
				<%= b.label :fax, :class => "control-label" %>
				<%= b.text_field :fax, :class => "form-control" %>
			</div>
		
		<% end %>

		<div id="email" class="col-xs-12">
			<%= f.label :email, :class => "control-label" %>
			<%= f.text_field :email, :class => "form-control" %>
		</div>
	
	</div>
	
	<div id="is_taxable" class="col-xs-12">
		<%= label_tag :is_taxable do %>Is Taxable
			<%= f.check_box :is_taxable, :value => :is_taxable, :class => "form-control" %>
		<% end %>
	</div>
	
	<div id="replace_items" class="col-xs-12">
		<%= label_tag :replace_items do %>Replace Items
			<%= f.check_box :replace_items, :value => :replace_items, :class => "form-control" %>
		<% end %>
	</div>
	
	<div id="group" class="col-xs-6">
		<%= f.label :group_name, :class => "control-label" %>
		<%= f.text_field :group_name, :class => "form-control", data: {autocomplete_source: groups_path} %>
	</div>
	
	<script>
	jQuery(function() {
		return $('#account_group_name').autocomplete({
			source: $('#account_group_name').data('autocomplete-source'),
			response: function( event, ui ) {
				ui.content.forEach(function(item) {
					item.label = item.name;
				})
			},
      select: function( event, ui ) {
        $("#account_group_name" ).val(ui.item.name);
        return false;
      }
		})
	});
	</script>
	
	<div id="sales_rep" class="col-xs-6">
		<%= f.label :sales_rep_name, :class => "control-label" %>
		<%= f.text_field :sales_rep_name, :class => "form-control", data: {autocomplete_source: sales_reps_path} %>
	</div>
	
	<script>
	jQuery(function() {
		return $('#account_sales_rep_name').autocomplete({
			source: $('#account_sales_rep_name').data('autocomplete-source')
		})
	});
	</script>
	
	<div id="credit_limit" class="col-xs-4">
		<%= f.label :credit_limit, :class => "control-label" %>
		<%= f.text_field :credit_limit, :class => "form-control" %>
	</div>
	
	<div id="credit_terms" class="col-xs-4">
		<%= f.label :credit_terms, :class => "control-label" %>
		<%= f.text_field :credit_terms, :class => "form-control" %>
	</div>
	
	<div id="credit_terms" class="col-xs-4">
		<%= f.label :quickbooks_id, :class => "control-label" %>
		<%= f.text_field :quickbooks_id, :class => "form-control", :disabled => true %>
	</div>
	
	<div id="subscription_week_day" class="col-xs-4">
		<%= f.label :subscription_week_day, :class => "control-label" %>
		<%= f.text_field :subscription_week_day, :class => "form-control" %>
	</div>
	
	<div id="subscription_month_day" class="col-xs-4">
		<%= f.label :subscription_month_day, :class => "control-label" %>
		<%= f.text_field :subscription_month_day, :class => "form-control" %>
	</div>
	
	<div id="subscription_quarter_day" class="col-xs-4">
		<%= f.label :subscription_quarter_day, :class => "control-label" %>
		<%= f.text_field :subscription_quarter_day, :class => "form-control" %>
	</div>
	
</fieldset>