<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="myModalLabel">Edit Static Page</h4>
</div>

<div class="modal-body" id="modal-body">
	
	<% if @static_page.errors.any? %>
		<div id="flash_messages" class="alert alert-danger" role="alert">
			<strong><%= @static_page.errors.full_messages.join(', ') %></strong>
		</div>
	<% end %>
	
	<%= form_for @static_page, as: :static_page, url: static_page_path(@static_page, search_params), :remote => true, :html => {:class => "form-horizontal", id: "edit_static_page_#{@static_page.id}"} do |f| %>
		<%= render :partial => "static_pages/form", :locals => {:f => f}%>
	<% end %>
	
</div>

<div class="modal-footer">
	<%= button_tag(:name => :commit, :type => :submit, :class => "btn btn-primary", :form => "edit_static_page_#{@static_page.id}") do %>
		Update Static Page
	<% end %>
</div>
