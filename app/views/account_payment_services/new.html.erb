<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="myModalLabel">New Account Payment Service</h4>
</div>

<div class="modal-body" id="modal-body">
	
	<% if @account_payment_service.errors.any? %>
		<div id="flash_messages" class="alert alert-danger" role="alert">
			<strong><%= @account_payment_service.errors.full_messages.join(', ') %></strong>
		</div>
	<% end %>
	
	<%= form_for @account_payment_service, as: :account_payment_service, url: account_payment_services_path(term: params[:term]), method: :post, :remote => true, :html => {:class => "form-horizontal"} do |f| %>
		<%= render :partial => "account_payment_services/form", :locals => {:f => f}%>
	<% end %>
	
</div>

<div class="modal-footer">
	<%= button_tag(:name => :commit, :type => :submit, :class => "btn btn-primary", :form => "new_account_payment_service") do %>
		Create Account Payment Service 
	<% end %>
</div>
