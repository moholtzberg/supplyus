<% content_for :app_location do %>Admin / Account Payment Services / Index<% end %>
<div id="account_payment_services" class="col-md-12">
	
	<table class="table table-bordered table-condensed">
		
		<tr>
			<td colspan="9">
				<form id="searchBox" accept-charset="UTF-8" action="/admin/account_payment_services" method="get" role="search" data-remote="true">
					<input type="text" class="form-control" id="term" name="term" placeholder="Enter account payment service name" value="<%= params[:term] %>">
				</form>
			</td>
		</tr>
		
		<tr>
			<th class="hidden-xs"><%= sortable "id" %></th>
			<th><%= sortable "account_id", "Account" %></th>
			<th><%= sortable "name" %></th>
			<th class="hidden-xs">Service ID</th>
			<th>&nbsp;</th>
		</tr>

		<% @account_payment_services.each do |a| %>
			<tr>
				<td class="hidden-xs"><%= a.id %></td>
				<td><%= a.account&.name %></td>
				<td><%= a.name %></td>
				<td><%= a.service_id %></td>
				<td class="text-center">
					<div class="dropdown">
						<button class="btn btn-default btn-xs dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
							<span class="caret"></span>
						</button>
						<ul class="dropdown-menu pull-right" aria-labelledby="dropdownMenu1">
							<li><%= link_to("View", account_payment_service_path(a.id))  %></li>
							<li><%= link_to("Edit", edit_account_payment_service_path(a.id, term: params[:term]), :remote => true)  %></li>
							<li><%= link_to("Destroy", account_payment_service_path(a.id, term: params[:term]), :method => :delete, :remote => true)  %></li>
						</ul>
					</div>
				</td>
			</tr>
		<% end %>

	</table>
		
	<%= will_paginate @account_payment_services, renderer: BootstrapPagination::Rails %>
	
	<%= link_to new_account_payment_service_path(term: params[:term]), :class => "btn btn-default pull-right", :remote => true do %><span class="glyphicon glyphicon-plus"></span><% end %>
	
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			
		</div>
	</div>
</div>
