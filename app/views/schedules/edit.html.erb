<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="myModalLabel">Edit Schedule</h4>
</div>

<div class="modal-body" id="modal-body">
	
	<% if @schedule.errors.any? %>
		<div id="flash_messages" class="alert alert-danger" role="alert">
			<strong><%= @schedule.errors.full_messages.join(', ') %></strong>
		</div>
	<% end %>
	
	<%= form_for @schedule, as: :schedule, url: schedule_path(@schedule, search_params), :remote => true, :html => {:class => "form-horizontal", id: "edit_schedule_#{@schedule.id}"} do |f| %>
		<%= render :partial => "schedules/form", :locals => {:f => f}%>
	<% end %>
	
</div>

<div class="modal-footer">
	<%= button_tag(:name => :commit, :type => :submit, :class => "btn btn-primary", :form => "edit_schedule_#{@schedule.id}") do %>
		Update Schedule
	<% end %>
</div>
