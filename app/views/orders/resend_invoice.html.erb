<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="myModalLabel">Resend Invoice</h4>
</div>

<div class="modal-body" id="modal-body">
	
	<% if flash[:error] %>
	<div id="flash_messages" class="alert alert-danger" role="alert">
		<strong><%= flash[:error] %></strong>
	</div>
	<% end %>
	
	<%= form_for @order, url: resend_invoice_notification_order_path(@order.id), method: "post", :remote => true, :class => "form-horizontal" do %>
	
		<div class="input-group">
			<%= label_tag :to, "TO:", :class => "input-group-addon" %>
			<%= email_field_tag :to, @order.bill_to_email, :class => "form-control" %>
		</div>
		<br>
		<div class="input-group">
			<%= label_tag :cc, "CC:", :class => "input-group-addon" %>
			<%= email_field_tag :cc, nil, :class => "form-control" %>
		</div>
	
	<% end %>
	
</div>

<div class="modal-footer">
	<%= button_tag(:name => :commit, :type => :submit, :class => "btn btn-primary", :form => "edit_order_#{@order.id}") do %>
	Send Invoice
	<% end %>
</div>
