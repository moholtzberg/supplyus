<% if @discount_code.errors.any? %>
  $(".modal-content").html("<%= j render :template => 'discount_codes/new.html', :format => 'html' %>")
<% else %>
  $('#myModal').modal("hide")
  $('body').removeClass('modal-open')
  $('.modal-backdrop').remove()
  $("#discount_codes").replaceWith("<%= j render :template => 'discount_codes/index.html', :format => 'html', :locals => {:discount_codes => @discount_codes} %>")
<% end %>