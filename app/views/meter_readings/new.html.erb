<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="myModalLabel">New Meter Reading</h4>
</div>

<div class="modal-body" id="modal-body">
	
	<% if flash[:error] %>
	<div id="flash_messages" class="alert alert-danger" role="alert">
		<strong><%= flash[:error] %></strong>
		<ul>
		<% @meter_reading.errors.full_messages.each do |e| %>
			<li><%= e %></li>
		<% end %>
		</ul>
	</div>
	<% end %>
	
	
	<%= form_for @meter_reading, :remote => true, :html => {:class => "form-horizontal"} do |f| %>
		<%= render :partial => "meter_readings/form", :locals => {:f => f}%>
	<% end %>
	
</div>

<div class="modal-footer">
	<%= button_tag(:name => :commit, :type => :submit, :class => "btn btn-primary", :form => "new_meter_reading") do %>
	Add Meter 
	<% end %>
</div>